<div class="bs-example">
    <form class="bs-example form-horizontal" method="POST" action="{{ path('competition_bids', { 'competitionId': competition.id }) }}">
        <div class="form-group">
            <div class="col-lg-12">
                <button class="btn btn-primary" type="submit">Save all bids</button> 
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Team</th>
                    <th>Results</th>
                    <th>-</th>
                    <th>Results</th>
                    <th>Team</th>
                    <th>Result of game</th>
                    <th>Points</th>
                </tr>
            </thead>
            <tbody>
            {% for bid in bids %}
            <tr>
                <td>{{ bid['time'] }}</td>
                <td>{{ bid['team_h'] }}</td>
                <td>
                    <input type="text" value="{{ bid['bid_score_home'] }}" name="bids[{{ bid['id'] }}][home]"
                    {% if bid['time'] < 'now'|date('Y-m-d H:i:s') %}disabled=""{% endif %}
                    class="form-control input-sm"></td>
                <td>-</td>
                <td>
                    <input type="text" value="{{ bid['bid_score_away'] }}" name="bids[{{ bid['id'] }}][away]"
                    {% if bid['time'] < 'now'|date('Y-m-d H:i:s') %}disabled=""{% endif %}
                    class="form-control input-sm"></td>
                <td>{{ bid['team_a'] }}</td>
                <td>
                    {% if bid['score_home'] and bid['score_away'] %}
                        {{ bid['score_home'] }}-{{ bid['score_away'] }}
                    {% endif %}
                </td>
                <td>{{ bid['points'] }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="form-group">
            <div class="col-lg-12">
                <button class="btn btn-primary" type="submit">Save all bids</button> 
            </div>
        </div>
    </form>
</div>
