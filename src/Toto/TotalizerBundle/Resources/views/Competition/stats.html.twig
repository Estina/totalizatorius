{% extends '::base.html.twig' %}

{% block body -%}
<div id="banner" class="page-header">
    <div class="row">
        <div class="col-lg-12">
            <h1>{{ entity.name }}</h1>
            <p>Current statistics</p>
        </div>
    </div>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>User</th>
            <th>Total points</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in stats %}
        <tr>
            <td>{{ entity.0.user }}</td>
            <td>{{ entity.total }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
