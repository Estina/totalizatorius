<div class="page-header" id="banner">
        <div class="row">
          <div class="col-lg-12">
            <h1>Registration</h1>
          </div>
        </div>
      </div>

      <!-- Tables
      ================================================== -->
      <div class="bs-docs-section">

        <div class="row">
          <div class="col-lg-12">
            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-horizontal">
              {{ form_row(form.username, {'attr':{'class':'col-lg-10'}}) }}
              {{ form_row(form.email, {'attr':{'class':'col-lg-10'}}) }}
              {{ form_row(form.plainPassword.first, {'attr':{'class':'col-lg-10'}}) }}
              {{ form_row(form.plainPassword.second, {'attr':{'class':'col-lg-10'}}) }}
              {{ form_rest(form) }}
              <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                  <button type="submit" class="btn btn-default">Sign up</button>
                </div>
              </div>
            </form>
        </div>
      </div>
