{% extends '::base.html.twig' %}

{% block body %}
<div class="page-header" id="banner">
        <div class="row">
          <div class="col-lg-12">
            <h1>Login</h1>
          </div>
        </div>
      </div>
{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}

      <!-- Tables
      ================================================== -->
      <div class="bs-docs-section">

        <div class="row">
          <div class="col-lg-12">
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
              <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
              <div class="form-group">
                <label for="inputEmail1" class="col-lg-2 control-label">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                <div class="col-lg-10">
                  <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" class="form-control" />
                </div>
              </div>
              <div class="form-group">
                <label for="inputPassword1" class="col-lg-2 control-label">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                <div class="col-lg-10">
                  <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" />
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                  <div class="checkbox">
                    <label>
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }} 
                    </label>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                  <button type="submit" class="btn btn-default">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
                </div>
              </div>
            </form>
        </div>
      </div>
{% endblock body %}
