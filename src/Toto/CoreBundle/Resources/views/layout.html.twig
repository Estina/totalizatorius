<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Totalizatorius</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta charset="utf-8">
        <link rel="stylesheet" href="{{asset('css/bootstrap.css')}}" media="screen">
    </head>
    <body>

        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <a href="{{ path('index') }}" class="navbar-brand">TOTALPEWPEW</a>
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse" id="navbar-main">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path('tournament') }}">Tournaments</a></li>
                        <li><a href="{{ path('team') }}">Teams</a></li>
                        <li><a href="{{ path('game') }}">Games</a></li>
                    </ul>

                </div>
            </div>
        </div>
        <div class="container">
<div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
        <a href="{{ path('fos_user_security_logout') }}">
            Logout
        </a>
    {% else %}
        <a href="{{ path('fos_user_security_login') }}">Login</a>
        <a href="{{ path('fos_user_registration_register') }}">Register</a>
    {% endif %}
</div>

{% for type, messages in app.session.flashbag.all() %}
    {% for key, message in messages %}
        <div class="flash-{{ type }}">
            {{ message|trans({}, 'FOSUserBundle') }}
        </div>
    {% endfor %}
{% endfor %}

<div>
    {% block fos_user_content %}
    {% endblock fos_user_content %}
</div>
<hr>
            {% block body %}{% endblock %}
            <footer>
                <div class="row">
                    <div class="col-lg-12">

                        <p>Made by <a href="http://www.estina.com">Estina - web apps development</a></p>

                    </div>
                </div>

            </footer>
        </div>
    </body>
</html>
